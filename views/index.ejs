<% include partials/header%>
    <fieldset id="allhobby_fieldset"> 
      <h2>Personal Messages Sent To <%=usertodo.username%> </h2>  
        <%usertodo.todo.forEach(function(todo){%>
        <div id="hobby_fieldset">
                <div>
            <img src="../imgs/arr.svg" alt="landding img" width="20px" class="userimg">   
                    </div>
                <%=todo.hobby%>
                <span id="date">Date Added:<%=todo.date.toDateString()%></span>
                
    </div>
        <%})%>
    <form action="/todoapp/<%=usertodo._id%>" method="POST">
    <ul id="hobbyForm">
            <h2 id="hobbytop">Send A New Message:</h2>    
            <textarea name="hobby" id="" cols="" rows="" placeholder="hobbies" class="hobbyinput commentinput2" ></textarea>
            <li><input type="submit" value="Send Message" id="hobbybut"></li>
        </ul>
        </form>
        <li><a href="/userlogout" >logout</a></li>
    </fieldset>
<% include partials/footer%>


